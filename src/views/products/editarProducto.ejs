<!DOCTYPE html>
<html lang="es">
  <!-- head -->
  <%let producto = singleProduct%> <%- include('../partials/head',
  {title:'Inicio'}) %>
  <body>
    <!-- /Header -->
    <%- include('../partials/header') %>

    <h2 class="subtitle-margin">Editar producto <%-producto.name%></h2>
    <section>
      <form
        action="/products/<%-producto.id%>/edit?_method=PUT"
        method="POST"
        id="product__form"
      >
        <div>
          <label for="productStatus">Disponible</label>
          <input
            type="checkbox"
            name="status"
            id="productStatus"
            class="productAvailable"
            <% if(producto.available){ %>
              checked
              <%}%>
          />
        </div>
        <div>
          <label for="productName"> Nombre del producto</label>
          <input
            type="text"
            name="name"
            id="productName"
            class="input is-info"
            value="<%-producto.name%>"
          />
        </div>
        <div>
          <label for="productEditorial">Editorial</label>
          <select name="editorial" id="productEditorial" class="input is-info">
            <option
            value="3"
            name="marvel"
            <% if(producto.editorial == 3){ %>
              selected
              <%}%>
          >
            Marvel Comics
          </option>
            <option
              value="2"
              name="dc"
              <% if(producto.editorial == 2){ %>
              selected
              <%}%>
            >
              DC Comics
            </option>
            <option
              value="1"
              name="image"
              <% if(producto.editorial == 1){ %>
                selected
                <%}%>
            >
              Image Comics
            </option>
          </select>
        </div>
        <div>
          <label for="productWriter">Escrito por</label>
          <select name="writer" id="productWriter" class="input is-info">
            <option value="1" name="Alan Moore">Alan Moore</option>
            <option value="2" name="Frank Miller">Frank Miller</option>
            <option value="3" name="Neil Gaiman">Neil Gaiman</option>
            <option value="4" name="Peter David">Peter David</option>
            <option value="5" name="Robert Kirkman">Robert Kirkman</option>
            <option value="6" name="Mark Waid">Mark Waid</option>
            <option value="7" name="Jim Lee">Jim Lee</option>
          </select>
        </div>
        <div>
          <label for="productPrice">Precio</label>
          <input
            type="number"
            name="price"
            id="productPrice"
            class="input is-info"
            value="<%-producto.price%>"
          />
        </div>
        <div>
          <label for="productDiscount">Descuento</label>
          <input
            type="number"
            name="discount"
            id="productDiscount"
            class="input is-info"
            value="<%-producto.discount%>"
          />
        </div>
        <div>
          <label for="productPublish">Fecha publicada</label>
          <input
            type="date"
            name="datePublished"
            id="productPublish"
            class="input is-info"
            value="<%-producto.datePublished%>"
            min="2010-01-01"
            max="2021-12-31"
          />
        </div>
        <!-- <div>
          <label for="productCover">Imagen del producto</label>
          <input type="file" name="cover" id="productCover" />
        </div> -->
        <div>
          <label for="productDescription">Descripci√≥n</label>
          <br />
          <textarea
            name="description"
            id="productDescription"
            cols="30"
            rows="10"
            class="productDescription"
          >
<%-producto.description%></textarea
          >
        </div>
        <div class="" style="display: flex; justify-content: center">
          <button type="submit" class="btn-addcart">Guardar producto</button>
        </div>
      </form>

      <form
        action="/products/<%-producto.id%>/edit?_method=DELETE"
        method="POST"
      >
        <div
          class=""
          style="display: flex; justify-content: center; margin-bottom: 4rem"
        >
          <button type="submit" class="btn-addcart">Eliminar producto</button>
        </div>
      </form>
    </section>

    <%- include('../partials/footer')%>
  </body>
</html>
