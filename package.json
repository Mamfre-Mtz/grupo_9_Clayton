{
  "name": "clayton",
  "version": "1.0.0",
  "description": "Tienda de comics clayton",
  "main": "app.js",
  "scripts": {
    "watch:sass": "node-sass public/assets/sass/main.scss public/assets/css/style.css -w",
    "demon": "nodemon src/app.js",
    "devserver": "live-server",
    "start": "npm-run-all --parallel demon watch:sass",
    "compile:sass": "node-sass public/assets/sass/main.scss public/assets/css/style.comp.css",
    "concat:css": "concat -o css/style.concat.css css/icon-font.css css/style.comp.css",
    "prefix:css": "postcss --use autoprefixer -b 'last 10 versions' css/style.concat.css -o css/style.prefix.css",
    "compress:css": "node-sass css/style.prefix.css css/style.css --output-style compressed",
    "build:css": "npm-run-all compile:sass concat:css prefix:css compress:css"
  },
  "author": "Equipo 9",
  "license": "ISC",
  "devDependencies": {
    "autoprefixer": "^7.1.4",
    "concat": "^1.0.3",
    "node-sass": "^4.5.3",
    "npm-run-all": "^4.1.1",
    "postcss-cli": "^4.1.1"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "bulma-switch": "^2.0.0",
    "cookie-parser": "^1.4.5",
    "ejs": "^3.1.6",
    "express": "~4.16.1",
    "express-session": "^1.17.2",
    "express-validator": "^6.12.1",
    "live-server": "^1.2.1",
    "method-override": "^3.0.0",
    "multer": "^1.4.3",
    "nodemon": "^2.0.12",
    "uuid": "^8.3.2"
  }
}
